{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/[...slug].js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/**/*"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...slug].js" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ]
}
