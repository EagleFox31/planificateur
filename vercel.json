{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/[...slug].js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/**/*"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...slug].js" },
    { "src": "/(.*\\..*)", "dest": "/frontend/$1" },
    { "src": "/.*", "dest": "/frontend/index.html" }
  ]
}
